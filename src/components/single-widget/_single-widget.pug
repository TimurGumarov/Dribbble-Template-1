include /components/manage-buttons/_manage-buttons.pug

mixin single-widget(widgetName)
  .single-widget
    .single-widget__header
      h3.single-widget__title= widgetName
      .single-widget__buttons-wrapper
        +manage-buttons('normal', 'edit', 'settings', 'submenu')
    if block
      .single-widget__content
        block